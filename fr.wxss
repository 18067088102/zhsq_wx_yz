/* pages/register/index.wxss */

/**
  register&forget界面css样式
  **/

.login-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}

.common-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 690rpx;
  height: 88rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 44rpx;
  position: relative;
}

.phone-view {
  margin: 71rpx 30rpx 0;
}

.login-input {
  margin-left: 49rpx;
  width: 430rpx;
  height: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 45, 44, 1);
  line-height: 48rpx;
}

.seePsw-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 49rpx;
}

.seePsw-img {
  width: 36rpx;
  height: 36rpx;
}

.placeholder {
  font-size: 30rpx;
  color: #979797;
  text-align: left;
}

.vscode-view {
  margin: 32rpx 30rpx 0;
}

.line {
  margin-left: 9rpx;
  width: 1rpx;
  height: 29rpx;
  background-color: #979797;
}

.vscode-text {
  height: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #218EFF;
}

.warn-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 34rpx;
  margin-left: 30rpx;
}

.warn-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.warn-text {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
}

.submit-btn {
  margin-top: 100rpx;
}