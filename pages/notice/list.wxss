/* pages/notice/list.wxss */

.noticeList {
  background: #fff;
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.noticeItem {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.noticeItem:last-child {
  border-bottom: none;
}

.notice_name {
  display: flex;
  justify-content: space-between;
  margin-bottom: 9rpx;
}

.noticeItem .notice_name text:first-child {
  font-size: 30rpx;
  color: #2A2C2F;
  width: 518rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
  line-height: 42rpx;
}

.noticeItem .notice_name text:last-child {
  flex-shrink: 0;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #919298;
  line-height: 37rpx;
}

.noticeItem .content {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 37rpx;
  color: #919298;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}