/* pages/livePayment/index.wxss */

.pay_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0 32rpx;
  background: #F6F7FA;
}

.pay_list_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 116rpx;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 24rpx;
}

.item_left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left_img {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.left_text {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #00172F;
  line-height: 42rpx;
}